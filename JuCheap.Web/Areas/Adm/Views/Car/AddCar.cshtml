@model JuCheap.Service.Dto.CarDto
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Adm/Views/Shared/_Layout_Body.cshtml";
}

@section Scripts{
    <script>$("#submitForm").validate({
            submitHandler: jucheap.buttonLoading,
            rules: {
                Carnumber: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                },
                Type: {
                    minlength: 1,
                    maxlength: 20
                },
                Zuoweinumber: {
                    minlength: 1,
                    maxlength: 3
                },
                Pinpai: {
                    minlength: 1,
                    maxlength: 20
                },
                Status: {
                    minlength: 1,
                    maxlength: 2
                }
            },
            messages: {
                Carnumber: {
                    required: "请输入车牌号",
                    minlength: "最小长度为2个字符",
                    maxlength: "最大长度为20个字符"
                },
                Type: {
                    required: "请输入车辆类型",
                    minlength: "最小长度为1个字符",
                    maxlength: "最大长度为20个字符"
                },
                Zuoweinumber: {
                    required: "请输入座位数",
                    minlength: "最小长度为1个字符",
                    maxlength: "最大长度为3个字符"
                },
                Pinpai: {
                    required: "请输入车辆品牌",
                    minlength: "最小长度为1个字符",
                    maxlength: "最大长度为20个字符"
                },
                Status: {
                    required: "请输入车辆状态",
                    minlength: "最小长度为1个字符",
                    maxlength: "最大长度为2个字符"
                }
            }
        });</script>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                添加车辆
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="submitForm" method="POST" action="@Request.Url.PathAndQuery" novalidate="novalidate">
                        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })
                        <div class="form-group ">
                            @Html.LabelFor(item => item.Carnumber, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Carnumber, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(item => item.Type, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Type, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(item => item.Zuoweinumber, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Zuoweinumber, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(item => item.Pinpai, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Pinpai, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(item => item.Status, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.Status, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">保存</button>
                                <button class="btn btn-default" type="button" onclick="jucheap.goback(this)">返回</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
