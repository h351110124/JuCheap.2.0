                <!-- visible small devices end-->
                <!--sidebar nav start-->
                <ul id="jucheapMenu" class="nav nav-pills nav-stacked side-navigation">
                    <li>
                        <h3 class="navigation-title">导航菜单</h3>
                    </li>
                    <li><a href="javascript:;" data-url="@Url.Action("index","Gonggao",new { Area = "Adm" })"><i class="fa fa-home"></i> <span>公告</span></a></li>

                    <li class="menu-list">
                        <a href="javascript:;" data-url="#//2020022417084214657901719703554/0">
                            <i class="fa fa-laptop"></i>
                            <span>差旅请假管理</span>
                        </a>
                        <ul class="child-list" style="">
                            <li>
                                <a href="javascript:;" data-url="/Adm/Menu/Index/2020022417084214657901719703554/2020022417084214657901719719936/0"> 差旅审批</a>
                            </li>
                            <li>
                                <a href="javascript:;" data-url="/Adm/Menu/Index/2020022417084214657901719703554/2020022417084214657901719719936/0"> 差旅申请</a>
